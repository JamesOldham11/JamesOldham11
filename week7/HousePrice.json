{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 500,
  "height": 300,
  "title": {
    "text": "London - Borough map",
    "subtitle": ["London projection"],
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 10,
    "subtitlePadding": 5,
    "anchor": "middle",
    "color": "black"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/JamesOldham11/JamesOldham11.github.io/main/week7/HousePrice.csv"
  },
  "params": [
    {
      "name": "year",
      "value": 2001,
      "bind": {
        "input": "range",
        "min": 2001,
        "max": 2022,
        "step": 1,
        "name": "Year:"
      }
    }
  ],
  "transform": [
    {
      "lookup": "Borough",
      "from": {
        "key": "properties.name",
        "fields": ["properties", "type", "geometry"],
        "data": {
          "url": "https://raw.githubusercontent.com/JamesOldham11/JamesOldham11.github.io/main/week7/geoLondonBorough.json",
          "format": {"property": "features"}
        }
      }
    },
    {"filter": "datum.Year==year"}
  ],
  "mark": {"type": "geoshape", "stroke": "darkgray", "strokeWidth": 0.5},
  "encoding": {
    "color": {
      "field": "PricePercent",
      "legend": {"title": null, "orient": "right", "direction": "vertical", "gradientLength": 300, "tickCount": 5},
      "type": "quantitative",
      "scale": {"scheme": "lightgreyred", "reverse": false, "domain": [0,500]}
    },
    "tooltip": [
      {"field": "properties.name", "title": "Borough"},
      {"field": "PricePercent", "title": "Percent Increase", "format": ".2f"}
    ]
  },
  "config": {}
}